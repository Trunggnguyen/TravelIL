<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.BlankFragment_Vote">
    <TextView
        android:layout_width="wrap_content"
        android:text="Đánh giá của bạn"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:id="@+id/ratingBar"
        android:rating="0"
        android:isIndicator = "false"
        android:layout_marginLeft="@dimen/_5sdp"
        style="@android:style/Widget.Holo.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:stepSize="0.5"
        android:transformPivotX="1dp"
        android:transformPivotY="1dp"
        android:max="5"/>
    <TextView
    android:textStyle="bold"
    android:textSize="20sp"
    android:id="@+id/post"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="-20dp"
    android:textColor="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:id="@+id/linneatLayout"
        android:orientation="horizontal">
        <EditText
            android:background="@drawable/add_edittext"
            android:hint="Nhận xét của bạn"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="#B5B5B5"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="8"
            android:id="@+id/cmtss"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="40dp"
                app:cardCornerRadius="@dimen/_12sdp">
                <TextView
                    android:text="Gửi"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/send"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:background="#FF6F00"
                    android:layout_height="40dp"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>