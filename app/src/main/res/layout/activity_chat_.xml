<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".Activity.Chat.Chat_Activity">

    <androidx.appcompat.widget.Toolbar
        android:background="#FF3C415E"
        android:id="@+id/toolbarchat"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/menu_search_chat">
    </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mytablayoutchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#1EA8BF"
            app:tabIndicatorHeight="2dp"
            android:background="#FF3C415E"
            app:tabIndicatorColor="#1EA8BF">
        </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/myviewpagerchat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1">
    </androidx.viewpager.widget.ViewPager>



</LinearLayout>