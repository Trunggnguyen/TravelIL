<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"

    tools:context=".Activity.Chat.Create_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarcreate"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="#FF3C415E"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/create"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Create" />

    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#515151"
            android:layout_height="wrap_content"
            android:text="Chon ảnh" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/grou_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/name_account"
        app:civ_border_color="#114C4A"
        app:civ_border_width="2dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_60sdp"
        android:hint="Tên nhóm của bạn"
        android:textColorHint="#AFAFAF"
        android:textColor="#353535"
        android:textSize="15sp"
        android:background="@drawable/search_input_style"
        android:paddingRight="@dimen/_30sdp"
        android:id="@+id/namegr"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_userchoi"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/farmetsss"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>


</RelativeLayout>