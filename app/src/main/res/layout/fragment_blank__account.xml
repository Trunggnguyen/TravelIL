<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerlayout"
    android:layout_below="@+id/toolbaracc"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.BlankFragment_Account">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FFFEFE"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/appcolor"
            android:id="@+id/toolbaracc"
            tools:ignore="MissingConstraints">
            <ImageButton
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:id="@+id/imaviewmenu"
                android:background="@drawable/menu"
                android:layout_marginTop="10dp"
                android:contentDescription="TODO" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel IL"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_bar"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"

                            android:background="@drawable/nenpofile"/>
                    <LinearLayout
                        android:layout_below="@+id/avataz"
                        android:layout_width="match_parent"
                        android:layout_marginTop="-40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/bt_save"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_40sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:id="@+id/user_name"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    />


                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"

                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/postt"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="18sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="Posts"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="35dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/follower"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="18sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="Followers"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="35dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:textSize="18sp"
                                        android:id="@+id/following"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="Following"/>

                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/_20sdp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/ops"
                                android:background="@drawable/edittext2"/>


                        </LinearLayout>


                    </LinearLayout>
                        <RelativeLayout
                            android:layout_width="@dimen/_80sdp"
                            android:id="@+id/avataz"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_50sdp"
                            android:layout_height="@dimen/_80sdp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_80sdp"

                                android:layout_height="@dimen/_80sdp"
                                android:src="@color/appcolor" />
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_imageus"
                                android:layout_width="@dimen/_78sdp"
                                android:layout_margin="@dimen/_1sdp"
                                android:layout_height="@dimen/_78sdp"
                                android:src="@mipmap/ic_launcher" />

                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/last_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/group"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:text="Chuyến đi"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/bt_travelpost"
                         />


                    <TextView
                        android:id="@+id/post"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:text="Kỉ niệm"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/bt_save" />



                    <TextView
                        android:id="@+id/savepost"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:text="Đã lưu"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/bt_save"  />

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_bar"
                    android:id="@+id/recycalviewgr"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_bar"
                    android:id="@+id/recycalviewpost"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_bar"
                    android:visibility="gone"
                    android:id="@+id/recycalviewpostsave"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationview"
        android:background="#FF3C415E"
        app:headerLayout="@layout/navigation_header"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:menu="@menu/menu_acc"
        android:layout_gravity="end"
        />

</androidx.drawerlayout.widget.DrawerLayout>