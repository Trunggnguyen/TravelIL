<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="@dimen/_80sdp"
    android:background="#807C7C7C">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/date"
        android:text="Thu hai"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_20sdp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_alignParentRight="true"
        android:id="@+id/imageic"
        android:layout_height="@dimen/_80sdp"
        />
    <TextView
       android:layout_toRightOf="@+id/date"
        android:layout_width="wrap_content"
        android:id="@+id/nhietdo"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="30 "
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/doam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="DO am :30% "
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />
    <TextView
        android:layout_toRightOf="@+id/doam"
        android:layout_below="@+id/date"
        android:layout_width="wrap_content"
        android:id="@+id/mua"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="Kha nang mua : 30% "
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="@dimen/_7sdp"
        android:layout_height="@dimen/_7sdp"
        android:layout_toRightOf="@+id/nhietdo"
        android:background="@drawable/rec"/>


</RelativeLayout>