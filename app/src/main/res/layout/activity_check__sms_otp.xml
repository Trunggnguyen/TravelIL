<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Login.Check_SmsOtpActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarcheckotp"
        android:layout_width="match_parent"
        app:titleTextColor="@color/white"
        android:layout_height="?attr/actionBarSize"
        android:background="#AE64E1"
        >

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the OTP sent to"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        />  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Enter the OTP sent to"
    android:id="@+id/textphone"
    android:textSize="12sp"
    android:layout_gravity="center"
    android:gravity="center"
    android:textColor="@color/purple_700"
    />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="TODO" />
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
        <EditText
            android:id="@+id/inputcode1"

            android:paddingLeft="20dp"
            android:layout_width="50dp"
            android:hint="_"
            android:layout_height="50dp"
            android:text=""
            android:maxLength="1"
            android:singleLine="true"
            android:importantForAutofill="no"
            android:maxEms="1"
            android:imeOptions="actionUnspecified"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/inputcode2"



            android:paddingLeft="20dp"
            android:layout_width="50dp"
            android:maxLength="1"
            android:singleLine="true"
            android:hint="_"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:imeOptions="actionUnspecified"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/inputcode3"

            android:hint="_"
            android:paddingLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:imeOptions="actionNext"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/inputcode4"

            android:hint="_"
            android:paddingLeft="20dp"
            android:imeOptions="actionNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:maxLength="1"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/inputcode5"

            android:hint="_"
            android:paddingLeft="20dp"
            android:layout_width="50dp"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:layout_height="50dp"
            android:maxLength="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/inputcode6"

            android:hint="_"
            android:paddingLeft="20dp"
            android:maxLines="1"
            android:maxLength="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:imeOptions="actionDone"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:inputType="number" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Didn't receive the OTP? "
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend OTP "
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#002AFF"
        />
    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/progress_barcheck"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/verfy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="VERIFY"
        android:textSize="15sp"
        android:textStyle="bold"

        android:gravity="center"
        android:layout_gravity="center"

        />
    </FrameLayout>


</LinearLayout>