<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:id="@+id/click"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:background="@drawable/item_tvgr"
    tools:context=".Fragment.BlankFragment_TravelCreate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imagepl"
                />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
            <ImageView
                android:id="@+id/icon_book"
                android:layout_width="@dimen/_25sdp"
                android:layout_margin="@dimen/_20sdp"
                android:src="@drawable/ic_save_black"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:contentDescription="TODO" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="15sp"
                android:textColor="#0BAAAF"
                android:textStyle="bold"
                android:id="@+id/nametv"
                />

        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/linear"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="13sp"
                android:id="@+id/rank"
                android:textColor="@color/black"/>
            <RatingBar
                android:id="@+id/ratingBar"
                android:rating="3.5"
                android:isIndicator = "true"
                android:layout_marginLeft="@dimen/_5sdp"
                style="@android:style/Widget.Holo.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:scaleX=".3"
                android:scaleY=".3"
                android:stepSize="0.5"
                android:transformPivotX="1dp"
                android:transformPivotY="1dp"
                android:max="5"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 danh gia"
            android:id="@+id/danh"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/ic_place"
                        android:layout_height="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/place"
                        android:layout_marginBottom="@dimen/_3sdp"
                        />

                </LinearLayout>
            </RelativeLayout>

            <TextView

                android:layout_below="@+id/nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:id="@+id/timer"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>