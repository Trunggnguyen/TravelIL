<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E8E8E8"
    android:layout_height="wrap_content"
    tools:context=".Fragment.Fragment_Home.BlankFragment_Banner">
    <ScrollView
       android:id="@+id/scrollViewbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"

                android:layout_height="@dimen/_150sdp">

            </androidx.viewpager.widget.ViewPager>

            <me.relex.circleindicator.CircleIndicator
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:id="@+id/circleindicator"
                android:layout_marginTop="10dp">

            </me.relex.circleindicator.CircleIndicator>
        </RelativeLayout>



    </ScrollView>
    <RelativeLayout
        android:id="@+id/relaytive"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        >
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
             android:id="@+id/reanay"
        android:background="@null"
        >
             <TextView
                 android:paddingTop="@dimen/_30sdp"
                 android:textColor="#999da4"
                 android:textColorHint="#999da4"
                 android:hint="search...."
                 android:textSize="@dimen/_13sdp"
                 android:background="@drawable/search_input_style"
                 android:id="@+id/search_input"
                 android:layout_width="match_parent"
                 android:cursorVisible="false"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:layout_height="@dimen/_77sdp"
                 android:ems="10"
                 android:paddingLeft="@dimen/_50sdp"
                 android:inputType="textPersonName"
                 />
             <ImageView
                 android:background="@drawable/ic_baseline_search_24"
                 android:layout_marginLeft="@dimen/_26sdp"
                 android:layout_marginTop="@dimen/_30sdp"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 />
         </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/scrollViewbanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@null"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentRight="true"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_50sdp"
            android:id="@+id/circle_image"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/user"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_15sdp"
                android:id="@+id/message"
                android:layout_height="@dimen/_15sdp"
                android:src="#FF3F21"
                />
            <TextView
                android:layout_width="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="1"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/name_banner"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"

        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@+id/name_banner"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_mapp"
            android:layout_width="13dp"
            android:layout_height="11dp"
            android:src="@drawable/map" />
        <TextView
            android:id="@+id/place"
            android:layout_toRightOf="@+id/ic_mapp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"

            />
    </RelativeLayout>

</RelativeLayout>