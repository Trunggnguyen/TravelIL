<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/rounded"
        android:src="@drawable/user"
        tools:ignore="MissingConstraints">

    </com.makeramen.roundedimageview.RoundedImageView>
    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/viewsuppost"
        app:layout_constraintBottom_toBottomOf="@+id/rounded"
        app:layout_constraintEnd_toEndOf="@+id/rounded"
        app:layout_constraintStart_toStartOf="@+id/rounded"
        app:layout_constraintTop_toTopOf="@+id/rounded"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="trung nv"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/viewsuppost"
        app:layout_constraintStart_toEndOf="@id/rounded"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="verifited"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/rounded"
        app:layout_constraintTop_toBottomOf="@id/viewsuppost"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>