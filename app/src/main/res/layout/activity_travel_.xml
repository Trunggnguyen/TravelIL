<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_add"
    tools:context=".Activity.Travel_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="#F57F17"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbaradd"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh đại diện cho chuyến đi"
            android:textColor="#F57F17"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="left"
            />
        <ImageView
            android:src="@drawable/choice_image"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:id="@+id/choice"
            android:layout_height="@dimen/_150sdp"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/trip"
            android:layout_marginLeft="@dimen/_30sdp"/>
        <EditText
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:hint="Tên chuyến đi"
            android:textColor="#FFFFFF"
            android:id="@+id/namegrtv"
            android:textSize="@dimen/_13sdp"
            android:background="@drawable/add_edittext"
            android:textColorHint="#BFBFBF"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_10sdp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/calendar"
                android:layout_marginLeft="@dimen/_30sdp"/>
            <TextView
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:hint="Thời gian chuyến đi"
                android:paddingTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/date"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_10sdp"
                android:background="@drawable/add_edittext"
                android:textColorHint="#BFBFBF"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/map"
                android:layout_marginLeft="@dimen/_30sdp"/>
            <EditText

                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:hint="Địa điểm"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/nameplace"
                android:background="@drawable/add_edittext"
                android:textColorHint="#BFBFBF"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Private"
                android:id="@+id/chedo"
                android:textColor="@color/black"
                android:textSize="15sp"
            />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycalviewadd"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/imageadd"
                android:layout_marginBottom="2dp"
                android:background="@drawable/add_user"
                android:layout_marginLeft="@dimen/_30sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm thành viên"
                android:layout_below="@+id/imageadd"
                android:id="@+id/textadd"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_10sdp"/>


        </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/clickadd"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textColorHint="#7A7A7A"
            android:text="Băt đầu chuyến đi"
            android:background="@drawable/background_dayonclick"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            />
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

</RelativeLayout>